<%- include('../partials/header') %>

<form action="/flights/<%= flight._id %>?_method=DELETE"
  class="delete-form" method="POST">
  <button type="submit">Delete Flight</button>
</form>
<br>
<section id="show-ejs-page">
    <div>Airline: </div>
    <div><%= flight.airline %></div>
    <div>Airport: </div>
    <div><%= flight.airport %></div>
    <div>Flight Number: </div>
    <div><%= flight.flightNo %></div>
    <div>Departure Date: </div>
    <div><%= flight.departs.toLocaleString() %></div>
</section>

<h2>Destinations</h2>
<form action="/flights/<%= flight._id %>/destinations" method="POST">
    <label>Airport:</label>
    <select name="airport">
        <option value="AUS">AUS</option>
        <option value="DFW">DFW</option>
        <option value="DEN">DEN</option>
        <option value="LAX">LAX</option>
        <option value="SAN">SAN</option>
    </select>
    <label>Departure Date
        <input type="datetime-local" name="arrival">
    </label>
    <input type="submit" value="Add Destination">
</form>
<br><br>
<% if (flight.destinations.length) { %>
    <table>
      <thead>
        <tr>
          <th>Airport</th>
          <th>Arrival</th>
        </tr>
      </thead>
      <tbody>
        <% flight.destinations.forEach(function(d) { %>
          <tr>
            <td><%= d.airport %></td>
            <td><%= d.arrival.toLocaleString() %></td>
            <td><form action="/flights/<%= flight._id%>/destinations/<%= d._id %>?_method=DELETE"
              class="delete-form" method="POST">
              <button type="submit">Delete</button>
            </form></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <h5>No Destinations Yet</h5>
<% } %>

<br>
<h2>Tickets</h2>
<a href="/flights/<%= flight._id %>/ticket/new">Add Ticket</a>
<% if (tickets.length) { %>
  <table>
    <thead>
      <tr>
        <th>Seat</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% tickets.forEach(function(t) { %>
        <tr>
          <td><%= t.seat %></td>
          <td><%= t.price %></td>
          <td><form action="/flights/<%= flight._id%>/destinations/<%= t._id %>?_method=DELETE"
            class="delete-form" method="POST">
            <button type="submit">Delete</button>
          </form></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
<% } else { %>
  <h5>No Tickets Yet</h5>
<% } %>





<%- include('../partials/footer') %>