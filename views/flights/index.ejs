<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title>Mongoose Flights</title>
</head>
<body>
    <header>
        <a href="/flights">All Flights</a>
        <a href="/flights/new">New Flight</a>
    </header>
    <h1>Flights</h1>
    <table>
      <thead>
          <tr>
              <th>Airline</th>
              <th>Airport</th>
              <th>Flight Number</th>
              <th>Departs</th>
          </tr>
      </thead>
      <tbody>
        <% flights.forEach(function(f) { %>    
          <tr>
                  <td><%= f.airline %></td>
                  <td><%= f.airport %></td>
                  <td><%= f.flightNo %></td>
                  <td><%= f.departs %></td>
              </tr>
        <% }); %>
        </tbody><br>
    </table>
    <a href="/flights/new">Add Flight</a>
</body>
</html>